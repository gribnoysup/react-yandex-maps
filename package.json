{
  "name": "react-yandex-maps",
  "version": "3.0.2",
  "description": "Yandex.Maps API bindings for React",
  "main": "index.js",
  "module": "dist/production/react-yandex-maps.esm.js",
  "umd:main": "dist/production/react-yandex-maps.umd.js",
  "unpkg": "dist/production/react-yandex-maps.umd.js",
  "files": [
    "README.md",
    "LICENSE",
    "dist"
  ],
  "scripts": {
    "clear": "rm -rf dist",
    "prettier": "prettier --write",
    "lint": "eslint",
    "build": "npm run clear && npm run microbundle:production && npm run microbundle:development",
    "microbundle": "microbundle --jsx React.createElement --name ReactYandexMaps --external react --globals react=React --define process.env.NODE_ENV=\"${NODE_ENV}\"",
    "microbundle:production": "NODE_ENV=production npm run microbundle -- --output ./dist/production",
    "microbundle:development": "NODE_ENV=development npm run microbundle -- --output ./dist/development",
    "microbundle:watch": "NODE_ENV=development npm run microbundle -- --output ./dist/development --compress false --watch",
    "docs:dev": "docz dev",
    "docs:build": "docz build",
    "docs:deploy": "now",
    "release": "./scripts/release.sh",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gribnoysup/react-yandex-maps.git"
  },
  "peerDependencies": {
    "react": "^0.14.9 || ^15.x || ^16.x"
  },
  "dependencies": {
    "create-react-context": "^0.2.3",
    "prop-types": "^15.7.2",
    "react-display-name": "^0.2.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "capitalize": "^2.0.0",
    "docz": "^1.2.0",
    "docz-theme-default": "^1.2.0",
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^1.3.1",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.0",
    "lodash": "^4.17.11",
    "marksy": "^8.0.0",
    "microbundle": "^0.11.0",
    "now": "^15.5.0",
    "prettier": "^1.17.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "webpack": "^4.33.0"
  },
  "keywords": [
    "react",
    "react-component",
    "yandex",
    "maps",
    "yandex-maps"
  ],
  "author": "Sergey Petushkov <petushkov.sergey@gmail.com>",
  "license": "MIT",
  "sideEffects": false,
  "bugs": {
    "url": "https://github.com/gribnoysup/react-yandex-maps/issues"
  },
  "homepage": "https://react-yandex-maps.now.sh",
  "directories": {
    "doc": "docs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test --coverage"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "npm run prettier",
      "git add"
    ],
    "*.{json,yml,css,md,mdx}": [
      "npm run prettier",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.js",
      "!**/*.test.js"
    ],
    "transform": {
      "^.+\\.js$": "./jest.transform.js"
    }
  },
  "resolutions": {
    "docz/**/webpack": "4.28.4"
  }
}
